    "fastify-plugin": "^5.1.0",
    "mysql2": "^3.16.0",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^7.0.4",
    "esbuild": "^0.27.2",
    "tsx": "^4.7.0",
    "typescript": "^5.5.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "private": true
