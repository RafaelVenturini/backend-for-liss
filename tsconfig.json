{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@api/*": [
        "src/lib/api/*"
      ],
      "@db": [
        "src/lib/database/index.ts"
      ],
      "@emails/*": [
        "src/lib/emails/*"
      ],
      "@plugins/*": [
        "src/plugins/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@config": [
        "src/config.ts"
      ]
    }
  },
  "include": [
    "src"
  ]
}
